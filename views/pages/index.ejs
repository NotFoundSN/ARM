<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css">
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"></script>
        <link rel='stylesheet' href='/stylesheets/style.css' />
    </head>
    <body>
        <%- include('../partials/header') %>
        <section class="row">
            <%- include('../partials/categories') %>
            <% for( let i = 0; i < productos.length; i++ ) { %>
            <div class="products col-10 col-lg-3">
                <article class="product bg-info text-white text-center">
                    <a href="/productos/<%= productos[i].id %>">
                        <img src="/img/productosImagenes/<%= productos[i].imagen %>">
                        <p class="productName"><%= productos[i].nombre %></p>
                        <p class="productPrice"><%= productos[i].moneda + ' $' +productos[i].precio %></p>
                        <% if(productos[i].descuento) { %>
                            <p class="productDiscount">Desc<%= productos[i].descuento %></p>
                        <% } %>
                    </a>
                </article>
            </div>
            <% } %>
        </section>
        <%- include('../partials/footer') %>
    </body>
</html>
