    <body>
        <%- include('../partials/header') %>
        <section>
            <%- include('../partials/categories') %>
            
            <div class="products">
                <div class='register'>
                    <form action="/userRegister" method="POST" class="register">
                        <label for="name">Nombre:</label>
                        <input id="name" type="text" name="name" required>
                        <label for="surname">Apellido:</label>
                        <input id="surname" type="text" name="surname" required>
                        <label for="mail">E-mail:</label>
                        <input id="mail" type="email" name="mail" required>
                        <label for="pass">contrasenia:</label>
                        <input id="pass" type="password" name="pass" required>
                        <label for="pass2">repita la contrasenia:</label>
                        <input id="pass2" type="password" name="pass2" required>
                        <label for="dni">DNI:</label>
                        <input id="dni" type="number" name="dni">
                        <label for="bornDate">Fecha de nacimiento: </label>
                        <input id="bornDate" type="date" name="bornDate" required>
                        <br>
                        <button name="register" type="button">Registrarse</button>
                    </form>
