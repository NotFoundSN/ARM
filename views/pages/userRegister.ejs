<!DOCTYPE html>
<html>
    <%- include('../partials/head')%>
    <body>
        <%- include('../partials/header') %>
        <section>
            <div class="d-none d-lg-inline float-left bg-secondary" style="height: 85vh;width: 12vw">
                <span class="m-3 text-white">Categorias</span>
                <ul class="list-group list-group-flush">
                    <a href="/" class="list-group-item list-group-item-primary"><i class="far fa-dot-circle"></i> Categoria</a>
                </ul>
            </div>
            
            <div class="products">
                <div class='register'>
                    <form action="/userRegister" method="POST" class="register">
                        <label for="name">Nombre:</label>
                        <input id="name" type="text" name="name" required>
                        <label for="surname">Apellido:</label>
                        <input id="surname" type="text" name="surname" required>
                        <label for="mail">E-mail:</label>
                        <input id="mail" type="email" name="mail" required>
                        <label for="pass">contrasenia:</label>
                        <input id="pass" type="password" name="pass" required>
                        <label for="pass2">repita la contrasenia:</label>
                        <input id="pass2" type="password" name="pass2" required>
                        <label for="dni">DNI:</label>
                        <input id="dni" type="number" name="dni">
                        <label for="bornDate">Fecha de nacimiento: </label>
                        <input id="bornDate" type="date" name="bornDate" required>
                        <br>
                        <button name="register" type="button">Registrarse</button>
                    </form>
                </div>
            </div>
        </section>
        <%- include('../partials/footer') %>
    </body>
</html>
