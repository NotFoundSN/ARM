<article class="productDetail">
    <div class="justify-content-center">
        <div class='productHead'>
            <div>
                <img class='imagenProd' src="/img/productosImagenes/<%= producto.imagen %>" alt='imagen de <%= producto.nombre %>' />
            </div>
            <ul class="productStats">
                <li class="productName">
                    <%= producto.nombre %>
                </li>
                <li class="productPrice">$<%= producto.precio %>
                </li>
                <li class="productDiscount">descuento del <%= producto.descuento %>%</li>
            </ul>
        </div>
        <p class="productDescription">
            <%= producto.descripcion %>
        </p>
    </div>
    </div>
</article>